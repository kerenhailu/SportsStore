@using SportsStore.Models;
@{
    ViewBag.Title = "ShowTable";
}

<style>
    #TableShoes {
        width: 90%;
        border-collapse: collapse;
        margin-left: 10%;
        margin-bottom: 1%;
        padding: 10%;
        margin:3%;
    }
    #TableShoes,
    th,
    td {
        text-align: center;
        border: 1px solid black;
        background-color: rgb(249, 228, 200);
    }

    #TableShoes,
    th {
        height: 50px;
    }

        #TableShoes tr {
            border: 3px solid black;
        }
    #Title {
        font-size: 50px;
        text-shadow: 2px 2px 2px rgb(80, 79, 76);
    }

    button {
        @*border: none;
        *@ background: rgb(249, 207, 147);
        font-weight: bold;
        font-size: large;
    }
</style>
<div>
    <h1 id="Title">Table Shoes : </h1>
    <button type="button" onclick="location.href = '@Url.Action("CardShoes","Shoes")'">click to all the Shoes </button>
    <button type="button" onclick="location.href = '@Url.Action("SaleShoes","Shoes")'">Show Sale Shoes </button>
    <table id="TableShoes">
        <tr>
            <th>ShoeType</th>
            <th>Company</th>
            <th>Model</th>
            <th>Price</th>
            <th>Amount</th>
            <th>IsSale</th>
            <th>Img</th>
        </tr>
        <tr>
            @foreach (Shoe shoe in @Model)
            {
                <td>@shoe.ShoeType</td>
                <td>@shoe.Company</td>
                <td>@shoe.Model</td>
                <td>@shoe.Price</td>
                <td>@shoe.Amount</td>
                <td>@shoe.IsSale</td>
                <td><img src="@shoe.Img" width="40px" height="40px" /></td>
            <tr />
        }
            <table />

    </div>
    <br />



