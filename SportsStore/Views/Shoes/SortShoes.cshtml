@using SportsStore.Models;



<style>
    body {
        background-color: rgb(238, 195, 115);
    }

    #Divcard {
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    #card {
        font-size: large;
        width: 40vh;
        height: 50vh;
        box-shadow: 5px 5px 5px rgb(202, 150, 92);
        background: linear-gradient(rgb(244, 223, 186),rgb(238, 195, 115),rgb(202, 150, 92));
        margin: 2%;
        /* border: 6px solid rgb(226, 22, 15); */
        text-align: center;
        border-radius: 10%;
        transition: 2s;
    }
        @*#card:hover {
            width: 5%;
            height: 5%;
        }*@
        #card img {
            width: 60%;
            height: 40%;
            border-radius: 10%;
        }

    button {
        background-color: rgb(238, 195, 115);
        font-weight: bold;
        @*border: none;
        *@ font-size: large;
        transition: 2s;
    }
    #Title {
        font-size: 50px;
        text-shadow: 2px 2px 2px rgb(80, 79, 76);
    }
            @*button:hover {
                width: 5%;
                height: 5%;
            }*@
</style>
<br />
<h1 id="Title">Sort Shoes :</h1>
<button type="button" onclick="location.href = '@Url.Action("TableShoes","Shoes")'">Show table </button>
<button type="button" onclick="location.href = '@Url.Action("CardShoes","Shoes")'">Show All Shoes </button>
<button type="button" onclick="location.href = '@Url.Action("SaleShoes","Shoes")'">Show Sale Shoes </button>
<div id="Divcard">
    <br />
    @foreach (Shoe shoe in @Model)
    {
        <section id="card">
            <h4>ShoeType : @shoe.ShoeType</h4>
            <h4>Company : @shoe.Company</h4>
            <h4>Price : @shoe.Price</h4>
            <img src="@shoe.Img" />
        </section>
    }
</div>

