@using SportsStore.Models;

<style>
    #TablePants {
        width: 90%;
        border-collapse: collapse;
        margin-left: 10%;
        margin-bottom: 1%;
        padding: 10%;
        margin: 3%;
    }

    #TablePants,
    th,
    td {
        text-align: center;
        border: 1px solid black;
        background-color: rgb(249, 228, 200);
    }

    #TablePants,
    th {
        height: 50px;
    }

        #TablePants tr {
            border: 3px solid black;
        }

    button {
        @*border: none;
        *@ background: rgb(249, 207, 147);
        font-weight: bold;
        font-size: large;
    }
</style>
<br />
<h2> Table of Pants</h2>
<button type="button" onclick="location.href = '@Url.Action("CardOfPants","Pants")'">To pants </button>
<button type="button" onclick="location.href = '@Url.Action("LongPants","Pants")'"> To LongPants </button>
<button type="button" onclick="location.href = '@Url.Action("shortPants","Pants")'"> To shortPants </button>
<button type="button" onclick="location.href = '@Url.Action("DreyfitPants","Pants")'"> To DreyfitPants </button>
<button type="button" onclick="location.href = '@Url.Action("shortPants","Pants")'"> To shortPants </button>
<button type="button" onclick="location.href = '@Url.Action("FemalePants","Pants")'"> To FemalePants </button>
<button type="button" onclick="location.href = '@Url.Action("MalePants","Pants")'"> To MalePants </button>
<div>
    <table id="TablePants">
        <tr>
            <th>ClothModel</th>
            <th>Company</th>
            <th>IsShort</th>
            <th>Price</th>
            <th>Amount</th>
            <th>IsDreyfit</th>
            <th>Gender</th>
            <th>Img</th>
        </tr>
        <tr>
            @foreach (Clothing pants in @Model)
            {
                <td>@pants.ClothModel</td>
                <td> @pants.Company</td>
                <td>@pants.IsShort</td>
                <td>@pants.Price</td>
                <td> @pants.Amount</td>
                <td> @pants.IsDreyfit</td>
                <td> @pants.Gender</td>
                <td><img src="@pants.Img" width="100px" height="40px" /></td>
            <tr />
        }
            <table />

    </div>

